{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*",
        "node_modules/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}